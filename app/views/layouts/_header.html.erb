<header class="navbar navbar-expand-md sticky-top">
  <div class="container-fluid">
    <%= link_to 'UnknownMusic', root_path, class: 'logo'%>
    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-end" id ="navbar">
      <ul class="nav navbar-nav">
        <li class="nav-item"><%= link_to 'about', about_path, class: 'link-style' %></li>
        <li class="nav-item"><%= link_to 'search', songs_search_path, class: 'link-style' %></li>
        <li class="nav-item">
          <%= link_to microposts_path, class: 'link-style text-center' do %>
            <section>
              <p class="eng-link">popular posts</p>
              <p class="jpn-link">人気投稿</p>
            </section>
          <% end %>
        </li>
        <% if logged_in? %>
          <li class="nav-item"><%= link_to 'home', home_path, class: 'link-style' %></li>
          <li class="nav-item"><%= link_to 'user', users_path, class: 'link-style' %></li>
          <li class="nav-item"><%= link_to 'setting', edit_user_path(current_user), class: 'link-style' %></li>
          <li class="nav-item"><%= link_to 'logout', logout_path, class: 'link-style' %></li>
        <% else %>
          <li class="nav-item"><%= link_to 'login', login_path, class: 'link-style' %></li>
          <li class="nav-item"><%= link_to 'sign up', signup_path, class: 'link-style' %></li>
        <% end %>
      </ul>
    </div>
  </div>
</header>
