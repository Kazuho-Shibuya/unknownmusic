<% provide(:title, "ログイン") %>
<div class="login-img">
  <div id="wrapper" class="container-login">
    <%= render 'layouts/header' %>
    <div class="row justify-content-center">
      <div class="col-md-6">
        <p class="eng-title text-center">Login</p>
        <h1 class="jpn-title text-center">ログイン</h1>
        <div class="field text-center">
          <%= form_for(:session, url: login_path) do |f| %>
            <%= f.email_field :email, class: 'form-layout' %>
            <%= link_to "：パスワードをお忘れの場合はこちら", new_password_reset_path %>
            <%= f.password_field :password, class: 'form-layout' %>
            <%= f.label :remember_me, class: "checkbox inline" do %>
              <%= f.check_box :remember_me %>
              <span>ログイン状態を保持</span>
            <% end %>
            <%= f.submit "ログイン", class: "btn btn-style btn-login" %>
          <% end %>
          <%= link_to 'かんたんログイン', test_sessions_path, method: :post, class:"btn btn-lg btn-success center-block" %>
          <p>または</p>
          <%= link_to "新規登録", signup_path, class: "btn btn-style btn-to-signup" %>
        </div>
      </div>
    </div>
    <%= render 'layouts/footer' %>
  </div>
</div>
