<% provide(:path, home_path) %>
<% provide(:placeholder, 'アーティスト、曲名、投稿を検索') %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Micropost Feed</h3>
      <%= render 'users/search'%>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <% render root_url %>
<% end %>
