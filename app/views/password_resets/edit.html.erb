<% provide(:title, 'パスワード再設定') %>
<div class="reset-password-img">
  <div id="wrapper" class="container-reset-password">
    <%= render 'layouts/header' %>
    <div class="row justify-content-center">
      <div class="col-10 col-lg-6">
        <p class="eng-title text-center">Reset password</p>
        <h1 class="jpn-title text-center">パスワード再設定</h1>
        <div class="field text-center">
          <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
            <%= hidden_field_tag :email, @user.email %>
            <%= f.password_field :password, class: 'reset-password-form', placeholder: 'パスワード'  %>
            <% if f.object.errors.include?(:password) %>
              <p class="alert alert-danger error mx-auto text-left"><%= f.object.errors.full_messages_for(:password).first %></p>
            <% end %>
            <%= f.password_field :password_confirmation, class: 'reset-password-form', placeholder: 'パスワード（確認）' %>
            <% if f.object.errors.include?(:password_confirmation) %>
              <p class="alert alert-danger error mx-auto text-left"><%= f.object.errors.full_messages_for(:password_confirmation).first %></p>
            <% end %>
            <%= f.submit "パスワード更新", class: "btn-style btn-reset-password mx-auto" %>
          <% end %>
        </div>
      </div>
    </div>
    <%= render 'layouts/footer' %>
  </div>
</div>
