<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span><br>
  <span class="artist"><%= micropost.artist %></span> - 
  <span class="song"><%= micropost.song %></span>
  <span class="content"><%= micropost.content %>
    <%= link_to '試聴', micropost.listening_url, class: 'btn btn-sm btn-primary', target: :_blank %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user?(micropost.user) %>
      <%= link_to "delete", micropost, method: :delete,
                                       data: { confirm: "本当に削除しますか？" } %>
    <% end %>
  </span>
  <%= render 'likes/like', micropost: micropost %>
</li>
