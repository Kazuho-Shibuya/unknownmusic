<li id="micropost-<%= micropost.id %>">
  <%= image_tag micropost.user.image.thumb50.to_s %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span><br>
  <span class="artist"><%= micropost.artist %></span> -
  <span class="song"><%= micropost.song %></span>
  <span class="content"><%= micropost.content %></span>
  <span class="timestamp">
    <i class="fa fa-clock-o "></i>
    <%= time_ago_in_words(micropost.created_at) %>前
    <% if current_user?(micropost.user) %>
      <%= link_to "delete", micropost, method: :delete,
                                       data: { confirm: "本当に削除しますか？" } %>
    <% end %>
  </span>
  <%= link_to '', micropost.listening_url, class: 'fa fa-play', target: :_blank %>
  <%= render 'likes/like', micropost: micropost %>
</li>
